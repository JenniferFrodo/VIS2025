import plotly.graph_objects as go

# Daten
Jahre = ['2014', '2015', '2016', '2017', '2018', '2019', '2020', '2021', '2022', '2023', '2024']
StÃ¤dtischeKantone = [160, 159, 162,	159, 162, 155, 152,	146, 149, 147, 143]
UrbaneKantone = [82, 81, 81, 78, 77, 78, 76, 76, 75, 75, 75]
LÃ¤ndlicheKantone = [33,	33,	35,	34,	37,	36,	35,	35,	38,	38,	37]

# Erstellen des Plots mit zwei Spalten
fig = go.Figure()

# Erster Wert (z.B. StÃ¤dtische Kantone)
fig.add_trace(go.Bar(
    x=Jahre,
    y=StÃ¤dtischeKantone,
    name='StÃ¤dtische Kantone ğŸ™ï¸',
    marker_color='grey'
))

# Zweiter Wert (z.B. Urbane Kantone)
fig.add_trace(go.Bar(
    x=Jahre,
    y=UrbaneKantone,
    name='Urbane Kantone ğŸ˜ï¸',
    marker_color='tan'
))

# Dritter Wert (z.B. LÃ¤ndliche Kantone)
fig.add_trace(go.Bar(
    x=Jahre,
    y=LÃ¤ndlicheKantone,
    name='LÃ¤ndliche Kantone ğŸ¡',
    marker_color='green'
))

# Layout anpassen
fig.update_layout(
    plot_bgcolor='white',
    barmode='group',  # Gruppiert die Balken nebeneinander
    title='Kinoanzahl nach KantongrÃ¶ÃŸe',
    xaxis_title='Jahre',
    yaxis_title='Kinoanzahl',
    yaxis=dict(
        showgrid=True,
        gridcolor='rgba(0,0,0,0.1)',
        gridwidth=1
    )
)

# Referenzlinien an y-Achsen-Kennzahlen
for y in [50, 100, 150]:
    fig.add_hline(y=y, line_dash="solid", line_color="black", line_width=1.5, opacity=0.1, layer="below")

# Diagramm anzeigen
fig.show()
